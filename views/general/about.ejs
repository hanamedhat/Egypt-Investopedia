            <div class="bg">
                <div class="op"></div>
            </div>
            <div class="vision-circles">
                <div class="vision-first-circle circle">
                    <i class="fa-solid fa-binoculars"></i>
                </div>
                <div class="vision-second-circle circle">
                    <i class="fa-regular fa-lightbulb"></i>
                </div>
                <div class="vision-third-circle circle">
                    <i class="fa-regular fa-gem"></i>
                </div>
            </div>
        </div>
      
