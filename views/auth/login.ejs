<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/logn.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Login & Register</title>
    <link rel="stylesheet" href="/css/about.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/nav.css">
</head>
<body>
    <%- include('../includes/nav.ejs') %>
    
    <div class="wrapper">
        
        <div class="form-box">
            <!------------------- Login form -------------------------->
            <div class="login-container" id="login">
                <div class="left">
                    <img src="/images/futurism-perspective-digital-nomads-lifestyle.jpg" alt="Login Image" class="img">
                    <div class="text">
                        <h1>Welcome To <span>Egypt Investopedia </span></h1>
                        <!-- <h2>Where Ideas Meet Growth</h2>   -->
                        <p>Log in to explore groundbreaking startups, connect with visionary entrepreneurs, and discover investment opportunities that fuel innovation and growth.</p>  
                    </div>
                </div>
                <div class="right">
                    <div class="top">
                        <header class="head">Login</header>
                        <!-- <span>Don't have an account? <a href="/egypt-investopedia/registration" onclick="register()">Sign Up</a></span> -->
                    </div>
                    <% if (success) { %>
                        <div class="success-message">Login successful! Redirecting...</div>
                        <script>
                            setTimeout(() => {
                                window.location.href = '/';
                            }, 2000);
                        </script>
                    <% } %>
                    <form action="/login" method="POST">
                        <div class="input-box">
                            <input type="text" name="email" class="input-field" placeholder="Username or Email" value="<%= body.email %>">
                            <i class="bx bx-user"></i>
                        </div>
                        <% if (errors.email) { %>
                            <div class="error-message"><%= errors.email %></div>
                        <% } %>
                        <div class="input-box">
                            <input type="password" name="password" class="input-field" placeholder="Password">
                            <i class="bx bx-lock-alt"></i>
                        </div>
                        <% if (errors.password) { %>
                            <div class="error-message"><%= errors.password %></div>
                        <% } %>
                        <div class="input-box">
                            <input type="submit" class="submit" value="Sign In">
                        </div>
                        <div class="two-col">
                            <div class="two">
                                <label><a href="/reset-password" id="fp">Forgot password?</a></label>
                            </div>
                            <div class="top" style="padding-top: 20px;">
                                <span>Don't have an account? <a href="/egypt-investopedia/registration" style="text-decoration: underline;">Sign Up</a></span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>   
    </div>
    <%- include('../includes/footer.ejs') %>
    <script>
        function register() {
            // Logic to show the registration form and hide the login form
            document.getElementById('login').style.display = 'none';
            // Assuming there is a registration container with id 'register'
            document.getElementById('register').style.display = 'block';
        }
    </script>
    <script src="/js/nav.js"></script>
</body>
</html>
