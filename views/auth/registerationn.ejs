<!-- views/auth/registerationn.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/registrationn.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Login & Register</title>
    <link rel="stylesheet" href="/css/about.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/nav.css">
</head>
<body>
  <%- include('../includes/nav.ejs') %>
    <div class="wrapper">

        <!----------------------------- Form box ----------------------------------->    
        <div class="form-box">
            
            <!------------------- Login form -------------------------->

            <div class="login-container" id="login">
                <div class="left">
                    <!-- <img src="/images/futurism-perspective-digital-nomads-lifestyle (1).jpg" alt="Login Image" class="img"> -->
                    <div class="text">
                        <h1>Welcome To <span>Egypt Investopedia </span></h1>
                        <!-- <h2>Where Ideas Meet Growth</h2>   -->
                        <p>Sign up to explore groundbreaking startups, connect with visionary entrepreneurs, and discover investment opportunities that fuel innovation and growth.</p>  
                    </div>
                </div>
                <div class="right">

                    <div class="top">
                        <header class="head">Sign Up</header>
                        <!-- <span>You have an account? <a href="/egypt-investopedia/login" onclick="register()">login</a></span> -->
                    </div>

                
                    <% if (success) { %>
                      <div id="success-alert" class="alert alert-success">
                          Registration successful! Redirecting...
                      </div>
                      <script>
                          setTimeout(() => {
                              window.location.href = '/investor-info/<%= userId %>';
                          }, 5000);
                      </script>
                  <% } %>


                    <!-- Display errors under each input field -->
                    <form action="/register" method="POST">
                        <div class="radio" id="rad">
                            <label class="radio-label" >
                                <input type="radio" name="role" value="startupOwner" <%= body.role === 'Startup Owner' ? 'checked' : '' %>>
                                <i class='bx bx-male'></i><span>Startup Owner</span>
                            </label>
                            <label class="radio-label">
                                <input type="radio" name="role" value="Investor" <%= body.role === 'Investor' ? 'checked' : '' %>>
                                <i class='bx bx-male'></i><span>Investor</span>
                            </label>
                        </div>
                        <% if (errors && errors.role) { %>
                            <p class="error"><%= errors.role %></p>
                        <% } %>
                        <div class="two-forms">
                    
                            <div class="input-box">
                                <div style="position: relative;">
                                    <input type="text" class="input-field" name="firstName" placeholder="Firstname" value="<%= body.firstName || '' %>">
                                    <i class="bx bx-user"></i>
                                </div>
                                <% if (errors && errors.firstName) { %>
                                    <p class="error"><%= errors.firstName %></p>
                                <% } %>
                            </div>
                            <div class="input-box">
                                <div style="position: relative;">
                                    <input type="text" class="input-field" name="lastName" placeholder="Lastname" value="<%= body.lastName || '' %>">
                                    <i class="bx bx-user"></i>
                                </div>
                                <% if (errors && errors.lastName) { %>
                                    <p class="error"><%= errors.lastName %></p>
                                <% } %>
                            </div>
                        </div>
                        
                        <div class="two-forms">
                            <div class="input-box">
                                <div style="position: relative;">
                                    <input type="email" class="inputt" name="email" placeholder="Email" value="<%= body.email || '' %>">
                                    <i class="bx bx-envelope"></i>
                                </div>
                                <% if (errors && errors.email) { %>
                                    <p class="error"><%= errors.email %></p>
                                <% } %>
                            </div>
                            <div class="input-box">
                                <div style="position: relative;">
                                    <input type="text" class="inputt" name="phoneNumber" placeholder="Phone number" value="<%= body.phoneNumber || '' %>">
                                    <i class="bi bi-telephone"></i>
                                </div>
                                <% if (errors && errors.phoneNumber) { %>
                                    <p class="error"><%= errors.phoneNumber %></p>
                                <% } %>
                            </div>
                        </div>
                        <div class="two-forms">
                            <div class="input-box">
                                <div style="position: relative;">
                                    <input type="password" class="inputt" name="password" placeholder="Password" value="<%= body.password || '' %>">
                                    <i class="bx bx-lock-alt"></i>
                                </div>
                                <% if (errors && errors.password) { %>
                                    <p class="error"><%= errors.password %></p>
                                <% } %>
                            </div>
                            <div class="input-box">
                                <div style="position: relative;">
                                    <input type="password" class="inputt" name="confirmPassword" placeholder="Confirm Password" value="<%= body.confirmPassword || '' %>">
                                    <i class="bx bx-lock-alt"></i>
                                </div>
                                <% if (errors && errors.confirmPassword) { %>
                                    <p class="error"><%= errors.confirmPassword %></p>
                                <% } %>
                            </div>
                        </div>
                        <div class="two-forms">
                            <div class="input-box">
                                <div style="position: relative;">
                                    <input type="url" class="inputt" name="linkedIn" placeholder="LinkedIn profile url" value="<%= body.linkedIn || '' %>">
                                    <i class="bi bi-person-circle"></i>
                                </div>
                                <% if (errors && errors.linkedIn) { %>
                                    <p class="error"><%= errors.linkedIn %></p>
                                <% } %>
                            </div>
                            <div class="input-box">
                                <div style="position: relative;">
                                    <input type="text" class="inputt" name="jobTitle" placeholder="Position/Title" value="<%= body.jobTitle || '' %>">
                                    <i class="bx bx-user"></i>
                                </div>
                                <% if (errors && errors.jobTitle) { %>
                                    <p class="error"><%= errors.jobTitle %></p>
                                <% } %>
                            </div>
                        </div>
                        <div class="two-forms">
                            <div class="input-box">
                                <div style="position: relative;">
                                    <input type="number" class="inputt" name="age" placeholder="Age" value="<%= body.age || '' %>">
                                    <i class="bx bx-user"></i>
                                </div>
                                <% if (errors && errors.age) { %>
                                    <p class="error"><%= errors.age %></p>
                                <% } %>
                            </div>
                            <div class="radioo" id="rad">
                                <input type="radio" name="gender" value="male" <%= body.gender === 'male' ? 'checked' : '' %>> <i class='bx bx-male'></i> Male <br>
                                <input type="radio" name="gender" value="female" <%= body.gender === 'female' ? 'checked' : '' %>> <i class='bx bx-female'></i>Female
                                <% if (errors && errors.gender) { %>
                                    <p class="error"><%= errors.gender %></p>
                                <% } %>
                            </div>
                        </div>
                        <div class="input-box">
                            <input type="submit" class="submit" value="Sign In">
                        </div>
                        <div class="two-col">
                           
                            <div class="two">
                                <label><a href="#" id="fp">Terms & Conditions</a></label>
                            </div>
                            <div class="top" style="padding-top: 20px;">
                                <span>You have an account? <a href="/egypt-investopedia/login" style="text-decoration: underline;">login</a></span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>   
    </div>
    <%- include('../includes/footer.ejs') %>
   
    <script src="/js/nav.js"></script>
    <script>
        function register() {
            // Logic to show the registration form and hide the login form
            document.getElementById('login').style.display = 'none';
            // Assuming there is a registration container with id 'register'
            document.getElementById('register').style.display = 'block';
        }
       
    </script>
</body>
</html>
